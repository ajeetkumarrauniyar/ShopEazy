{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@omniledger/database": [
        "../../packages/database"
      ],
      "@omniledger/database/*": [
        "../../packages/database/*"
      ]
    },
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/database"
    },
    {
      "path": "../../packages/components"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../packages/database/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
