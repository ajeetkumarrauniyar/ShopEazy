{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@omniledger/database/*": ["../../packages/db/*"]
    },
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "incremental": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "noEmit": true
  },
  "references": [
    {
      "path": "../../packages/db"
    },
    { "path": "../../packages/components" }
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../packages/db/**/*.ts",
  ],
  "exclude": ["node_modules", "**/*.test.ts"]
}
